// Try Prisma Accelerate: https://pris.ly/cli/accelerate-init

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// On the .env file, Base it off of this template
// DATABASE_URL="mysql://root:randompassword@localhost:3306/mydb"
// where Root = your username, randompassword = your password, localhost = your host, 3306 = your port, mydb = your database name
model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
}
